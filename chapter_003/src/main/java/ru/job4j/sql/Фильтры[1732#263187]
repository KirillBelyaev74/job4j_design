select * from product where type_id = 1;
select * from product where name like '%мороженное%';
select * from product where expired_date > (current_date + 30);
select * from product where price = (select max(price) from product);
select * from product where type_id = 2;
select * from product where type_id in (1, 2);
select * from product group by id having count(product.type_id) < 10;
select * from product;